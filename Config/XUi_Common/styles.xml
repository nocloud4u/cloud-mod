<?xml version="1.0" encoding="utf-8"?>
<configs>
  <!--Begin AGF 84 Slot Backpack Code-->
  <!--This is to make the "lock" icone in the header of your inventory to blink RED while you are in locking/unlocking mode-->
  <append xpath="/styles/global">
    <style_entry name="agfselectedColor" value="255,0,0" />
  </append>
  <append xpath="/styles">
    <style type="button" name="agfLock">
      <style_entry name="atlas" value="UIAtlas" />
      <style_entry name="sprite" value="[default_sprite]" />
      <style_entry name="defaultcolor" value="[iconColor]" />
      <style_entry name="hovercolor" value="[hoverColor]" />
      <style_entry name="selectedcolor" value="[agfselectedColor]" />
      <style_entry name="hoverscale" value="1.25" />
    </style>
  </append>
  <append xpath="/styles">
    <style name="itemStackAGF">
      <!--Make your own item stack style so the width/height selection is ONLY changed for the backpack-->
      <style_entry name="select_color" value="[beige]" />
      <style_entry name="press_color" value="[limeGreen]" />
      <style_entry name="final_pressed_color" value="[lightGrey]" />
      <style_entry name="background_color" value="[mediumGrey]" />
      <style_entry name="highlight_color" value="[hoverColor]" />
      <style_entry name="holding_color" value="[white]" />
      <style_entry name="width" value="54" />
      <!--Make the size of the cells-->
      <style_entry name="height" value="54" />
      <!--Make the size of the cells-->
      <style_entry name="hover_icon_grow" value="2" />
      <style_entry name="on_press" value="true" />
      <style_entry name="sound_volume" value="0.75" />
      <style_entry name="pickup_sound" value="[pickup_click]" />
      <style_entry name="place_sound" value="[place_click]" />
    </style>
  </append>
  <!--End AGF 84 Slot Backpack Code-->
  <!--Begin AGF HUD Plus Code-->
  <append xpath="/styles">
    <style name="icon32pxRed" type="button">
      <style_entry name="defaultcolor" value="[red]" />
      <style_entry name="width" value="32" />
      <style_entry name="height" value="32" />
      <style_entry name="foregroundlayer" value="true" />
    </style>
    <style name="icon32pxRed" type="sprite">
      <style_entry name="color" value="[red]" />
      <style_entry name="width" value="32" />
      <style_entry name="height" value="32" />
      <style_entry name="foregroundlayer" value="true" />
    </style>
  </append>
  <!--End AGF HUD Plus Code-->
  <!--Begin AGF HUD Plus Addon Code-->
  <append xpath="/styles">
    <style name="agftags" type="texture">
      <style_entry name="depth" value="1" />
      <style_entry name="width" value="65" />
      <style_entry name="height" value="74" />
      <style_entry name="texture" value="@modfolder:/UI/AGFTagR95.png" />
    </style>
    <style name="agftagsF" type="texture">
      <style_entry name="depth" value="1" />
      <style_entry name="width" value="65" />
      <style_entry name="height" value="74" />
      <style_entry name="texture" value="@modfolder:/UI/AGFTagR95Flip.png" />
    </style>
  </append>
  <!--End AGF HUD Plus Addon Code-->
  <!--Power Armor HUD-->
  <append xpath="/styles/global">
    <style_entry name="patoolbelt" value="@modfolder:Textures\patoolbelt.png" />
    <style_entry name="pacompass" value="@modfolder:Textures\pacompass.png" />
  </append>
</configs>